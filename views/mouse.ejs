<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Computer Mouse App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Computer Mouse App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/mouse">Add new computer mouse</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Mouse Details</h2></div>
        <br>
        <% if (mouse) { %> <!-- Check if mouse data exists -->
            <div>
                <p><b>Mouse Name:</b><br> <%= mouse.mouseName %></p>
                <p><b>Mouse Image:</b><br> <img src = "/images/<%= mouse.image %>" width="20%"></p>
                <p><b>Mouse Quantity:</b><br> <%= mouse.quantity %></p>
                <p><b>Price:</b><br> $<%= mouse.price.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No mouse found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
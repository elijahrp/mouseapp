<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Computer Mouse App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Computer Mouse App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addMouse">Add new computer mouses</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Computer Mices</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Mouse Name</th>
            <th width = "100">Mouse Image</th>
            <th width="50">Quantity</th>
            <th width="50">Price</th>
            <th width='50'>Edit</th>
            <th width='50'>Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < mouse.length; i++) { %>
          <tr>
            <td><a href= "/mouse/<%= mouse[i].mouseId %>"><%= mouse[i].mouseName %></a></td>
            <td><img src="/images/<%= mouse[i].image %>" width = "20%"> </td>
            <td><%= mouse[i].quantity %></td>
            <td>$<%= mouse[i].price.toFixed(2) %></td>
            <td><a href="/editMouse/<%= mouse[i].mouseId %>">Edit</a></td>
            <td><a href="/deleteMouse/<%= mouse[i].mouseId %>" onclick="return confirm('Are you sure you want to delete this mouse?')">Delete</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>